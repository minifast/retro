<section class="phx-hero">
  <h1><%= gettext "Welcome to %{name}!", name: "Retro" %></h1>
</section>

<section>
  <%= live_component @socket, RetroWeb.TopicForm, id: :topic_form, return_to: Routes.page_path(@socket, :index) %>
</section>

<section>
  <table>
    <tbody id="topic-list" class="topic-list">
      <%= for topic <- @topics do %>
        <%= live_component @socket, RetroWeb.TopicItem, id: "topic-item-#{topic.id}", topic: topic %>
      <% end %>
    </tbody>
  <table>
</section>
