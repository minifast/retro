<section class="phx-hero">
  <h1><%= gettext "Welcome to %{name}!", name: "Retro" %></h1>
</section>

<section>
  <%= live_component @socket, RetroWeb.TopicListForm, id: :topic_list_form %>
</section>

<section>
  <section class="topic-lists">
    <%= for topic_list <- @topic_lists do %>
      <section class="topic-lists__item"><%= live_component @socket, RetroWeb.TopicList, id: "topic-list-#{topic_list.id}", topic_list: topic_list %></section>
    <% end %>
  </section>
</section>
